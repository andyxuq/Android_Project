<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    	 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/centercom" android:layout_centerInParent="true"/>	    	 
	    	 <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Left Button" android:layout_alignLeft="@id/centercom" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"/>
	    	 <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Right Button" android:layout_alignRight="@id/centercom" android:layout_alignParentRight="true" android:layout_marginRight="5dp"/>
	</RelativeLayout>
	
	
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    	 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/centercom1" android:layout_centerInParent="true"/>	    	 
	    	 <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Left Button" android:layout_toLeftOf="@id/centercom1" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"/>
	    	 <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Right Button" android:layout_toRightOf="@id/centercom1" android:layout_alignParentRight="true" android:layout_marginRight="5dp"/>
	</RelativeLayout>
</LinearLayout>
